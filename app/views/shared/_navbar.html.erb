<div class="navbar navbar-expand-sm navbar-dark navbar-lewagon mb-3">
  <div class="container-fluid">
    <%= link_to "/", class: "navbar-brand" do %>
      <%= image_tag "logo.png" %>
    <% end %>
  <%# botão de panico do usuário sem foto %>
  <%# <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete} %>
  <%# Le gamer Market - nome - navbar %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="pt-2 text-light fs-6 pe-4">Balance: <%= number_to_currency(current_user.balance, unit: "$", separator: ",", delimiter: ".", precision: 2)  %></li>
          <li class="nav-item active">
          </li>
          <li class="nav-item dropdown">
          <a href="#" class="avatar" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <%  if current_user.photo.attached? %>
              <%= cl_image_tag current_user.photo.key, class: "avatar", alt: "dropdown menu" %>
            <% end %>
          </a>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
            <li class="nav-item">
            <%= link_to "Register", new_user_registration_path, class: "nav-link" %>
            </li>
          </li>
        <% end %>

      </ul>
    </div>
  </div>
</div>
