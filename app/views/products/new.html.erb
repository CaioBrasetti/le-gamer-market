<h1>Products#new</h1>
<p>Find me in app/views/products/new.html.erb</p>

<%= simple_form_for [@product] do |f| %>
  <%= f.input :name %>
  <%= f.input :price %>
  <%= f.input :description %>
  <%= f.input :quantity %>
  <%= f.input :category, collection: Product::CATEGORIES %>

  <%= f.submit %>
<% end %>

