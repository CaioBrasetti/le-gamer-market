<div class="container mt-3">
  <div class="text-center">
    <h1>Le Gamer Market</h1>
  </div>
<div class="d-flex mt-3">
  <div class="flex-column flex-shrink-0 p-3 bg-light " style="width: 180px;">
    <a href="/" class="align-items-center mb-3 mb-md-0 me-md-auto link-dark text-decoration-none">
      <h3><span class="fs-4">All Categories</span></h3>
    </a>
    <hr>
    <ul class="nav nav-pills flex-column mb-auto text-center">
      <li class="nav-item">
        <li><% Product::CATEGORIES.each  do |category|%></li>
          <%= link_to category, products_path(category: category), class: "text-decoration-none" %>
        <% end %>
      </li>
    </ul>
    <hr>
  <p class="btn btn-success"><%= link_to 'Cria produtos', new_product_path, class: "text-decoration-none"%></p>
  </div>

  <div class="cards ms-4">
    <% if @products.any? %>
      <% @products.each do |product| %>
        <div class="card" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title"><%= link_to product.name, product_path(product), class: "text-decoration-none" %></h5>
            <p class="card-text">Price: <%= product.price %></p>
          </div>
        </div>
      <% end %>
    <% else %>
      <em>Sorry, no categories found.</em>
    <% end %>
  </div>
</div>





