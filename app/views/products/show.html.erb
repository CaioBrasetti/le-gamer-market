<h1><%= @product.name%></h1>

<p><%= @product.description%></p>
<h6><%= @product.price%></h6>
<p><%= @product.quantity%></p>
<p><%= @product.category%></p>

<%= link_to 'Editar produto', edit_product_path%>
<%= link_to 'Deletar produto', product_path(@product), data: { turbo_method: :delete, turbo_confirm: 'Tem certeza?' }%>

<% if current_user %>
  <%= simple_form_for [@product, @order] do |f| %>
    <%= f.input :quantity %>
    <%= f.submit "Comprar", class: 'btn btn-primary' %>
  <% end  %>
<% end %>
